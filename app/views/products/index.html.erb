<h1><%= (@num_products) %> Products in List</h1>
<hr>
<%= @message %>
<% @products.each do |product| %>
<div>
  <%= link_to product.name, product_path(product.id) %>
</div>
<div>
  <%= "Price: " + product.price %>
</div>
<div>
  <%= "Product code: " + product.code %>
</div>
<div>
  <%= "Product description: " + product.description %>
</div>
  <hr>
<% end %>
